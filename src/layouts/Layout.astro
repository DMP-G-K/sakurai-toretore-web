---
import LINEPurchaseButtonGroup from "../components/LINEPurchaseButtonGroup.astro";
import "../styles/global.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="奈良県桜井市で野菜直売所をおこなっている会社のホームページです。"
    />
    <title>{title}</title>
  </head>
  <body>
    <LINEPurchaseButtonGroup />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: var(--noto-sans);
    background-color: #fff9e0;
    color: #464646;
  }
  code {
    font-family: var(--noto-sans);
  }
  main {
    font-family: var(--noto-sans);
  }
</style>
