---
import LINEPurchaseButtonGroup from "../components/LINEPurchaseButtonGroup.astro";
import "../styles/global.css";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="さくらいとれとれ市場株式会社は奈良県桜井市にある野菜直売所で、毎朝農家から届く新鮮な野菜を店頭でご提供。地域の恵みが詰まった季節ごとの多様な野菜をお楽しみください。"
    />
    <title>{title}</title>
  </head>
  <body>
    <LINEPurchaseButtonGroup />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  html {
    font-family: var(--noto-sans);
    background-color: #fff9e0;
    color: #464646;
  }
  code {
    font-family: var(--noto-sans);
  }
  main {
    font-family: var(--noto-sans);
  }
</style>
