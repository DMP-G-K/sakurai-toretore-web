---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.vue";
---

<Layout title="My first blog with Astro">
  <main>
    <!-- ここからTOP -->
    <div class="sp-header">
      <Header cliant:laod />
    </div>
    <div>
      <div class="hero">
        <div class="slide-show">
          <img src="" />
        </div>
        <div class="hero-vertitcal-nav">
          <div class="logo">
            <img src="/svgs/logo.svg" alt="#" />
          </div>

          <div class="blue-flower-right">
            <img src="/svgs/blue-flower.svg" alt="#" />
          </div>
          <div class="blue-flower-left">
            <img src="/svgs/blue-flower.svg" alt="#" />
          </div>

          <div>
            <p class="hero-vertitcal-text">Sakurai Toretore Market</p>

            <p class="hero-vertitcal-text-sub">
              <span class="hero-vertitcal-text-sub-under">
                新鮮な野菜
              </span>の恵みを家庭にお届け！
            </p>
            <div class="title-png">
              <img src="/images/4d0939b9579d64f2.png" alt="" />
            </div>
