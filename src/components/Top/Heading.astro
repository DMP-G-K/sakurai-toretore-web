---
export interface Astro {
	en: string;
	ja: string;
	decoration?: boolean;
}

const { en, ja, decoration } = Astro.props;

let visibleWrap = decoration ? "flex gap-x-4 md:gap-x-10 justify-center items-center w-full" : "";
let visible = decoration
	? "block object-cover object-left overflow-hidden md:object-center w-10 h-4 md:w-auto md:h-auto"
	: "hidden";
---

<div class="flex flex-col items-center tracking-widest w-full md:my-14 my-4">
	<p class="text-xs md:text-base text-primary md:mb-3.5 mb-1">{en}</p>
	<div class={visibleWrap}>
		<img class={visible} src="/svgs/green-leaf.svg" alt="#" />
		<h2 class="text-xl md:text-3xl font-bold text-center min-w-fit">{ja}</h2>
		<img class={visible} src="/svgs/green-leaf.svg" alt="#" />
	</div>
</div>
