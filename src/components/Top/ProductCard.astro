---
import Button from "../Button.astro";

export interface Props {
	title: string;
	text: string;
	color?: string;
}
const { title, text, color = "none" } = Astro.props;
---

<div class="flex flex-col items-center justify-around h-full">
	<img class="h-52 w-full md:h-72 bg-primary rounded-xl" src="" />
	<div class="my-4">
		<p class="circle text-lg font-bold tracking-widest mb-4">{title}</p>
		<p class="mb-8 leading-loose tracking-widest">{text}</p>
	</div>
	<Button input="詳しくはこちら" bg="white" size="sm" />
</div>

<style lang="scss" define:vars={{ color }}>
	.circle {
		position: relative;
		padding-left: 1rem;
		color: var(--color);
		&::before {
			content: "";
			position: absolute;
			left: 0;
			top: 50%;
			transform: translateY(-50%);
			width: 10px;
			height: 10px;
			border-radius: 50%;
			background-color: var(--color);
		}
	}
</style>
